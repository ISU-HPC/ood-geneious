---
batch_connect:
  template: vnc
  geometry: "<%= screen_size %>"
  dpi: "<%= dpi %>"
  extra_args: "-depth 32"
script:
  accounting_id: "<%= custom_account.delete(' ') %>"
  native:
    - "--nodes=<%= bc_num_slots.blank? ? 1 : bc_num_slots.to_i %>"
    - "--mem=<%= mem_req %>" 
    - "--job-name=<%= job_name %>"
    - "--ntasks=<%= ntasks %>"
    - "--account=<%= custom_account.delete(' ') %>"
    - "--partition=<%= custom_queue.delete(' ') %>"
    <%- extra_arguments.split.each do |e| -%>
    - "<%= e %>"
    <%- end -%>

