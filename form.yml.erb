<%-
        begin
        queues = File.readlines Dir.home + "/.slurm-partitions"
        accounts = File.readlines Dir.home + "/.slurm-accounts"
        qos = File.readlines Dir.home + "/.slurm-qos"
        error = ""
        end
-%>

---
cluster:
  - "ceres"
  - "ceres-dev"

form:
  - version
  - custom_account
  - bc_num_hours
  - bc_num_slots
  - ntasks
  - mem_req
  - custom_queue
  - extra_arguments
  - bc_vnc_resolution
  - screen_size
  - dpi
  #- job_name    # Per VRSC-13520
  - bc_email_on_started


attributes:
  version:
    widget: "select"
    label: "Geneious Version"
    value: "2025.1.3"
    options:
      - ["2025.1.3"]


  working_dir:
    label: "Working Directory"
    data-filepicker: true
    data-target-file-type: dirs  # Valid values are: files, dirs, or both
    readonly: false
    help: "Select your project directory; defaults to $HOME"
  
  custom_queue:
    label: Queue
    help: Select queue from the drop-down
  <%- if queues.blank? -%>
    widget: text_field
  <%- else -%>
    widget: select
    options:
    <% queues.each do |val| %>
    <%  p = val.split(",")[0] %>
      - [ " <%= p %> " ] 
    <% end %>
  <% end %>

  custom_account:
    label: Account
    help: Account under which to run the job
  <%- if accounts.blank? -%>
    widget: text_field
  <%- else -%>
    widget: select
    options:
    <%- accounts.each do |a| -%>
      - [ "<%= a %>", "<%= a.delete(' ') %>" ]
    <%- end -%>
  <%- end -%>

  mem_req:
    label: "Memory required"
    help: "Specified as a whole number (no decimals) followed by a unit; e.g., 'M' (megabytes) or 'G' (gigabytes). Example: '16G' to request 16 gigabytes."
    widget: text_field
    value: "16G"

  job_name:
    label: "Job name"
    help: "Name of job shown in queue"
    value: "geneious"
    widget: text_field

  ntasks:
    widget: "number_field"
    label: "Number of cores"
    value: 2
    help: |
      Number of cores on node
    min: 0
    max: 4
    step: 1
    id: 'ntasks'

  bc_num_slots: "1"

  bc_vnc_resolution:
    required: true

  screen_size:
    widget: select
    label: "Screen Resolution"
    help: "Application display size"
    options:
      - [ "1024 x 768", "1024x768" ]
      - [ "1080p" , "1920x1080" ]
      - [ "1440p" , "2560x1440" ]
      - [ "2160p" , "3840x2160" ]

  dpi:
    widget: number_field
    label: "Display DPI to use"
    value: 72
    help: "Adjust display scaling dots-per-inch (DPI)"

  extra_arguments:
    label: "Optional Slurm Arguments"
    help: "Arguments such as --exclusive or --job-name can be specified here."
    widget: text_field
    value: ""


